<div class="container-fluid">
  <div class="col-12 col-md-8 col-lg-6 col-xl-3 mx-auto mt-3">
    <h2 class="mt-3">プロフィール編集</h2>
    <%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>

    <div class="mb-3 mt-4">
      <%= f.label "サモナーネーム", class: "form-label" %>
      <%= f.text_field :summoner_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "example@email.com", autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード", class: "form-label" %><% if @minimum_password_length %><em>(<%= @minimum_password_length %>文字以上)</em><i>変更しない場合は空欄にしてください</i><% end %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード(確認用)", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "変更", class: "btn btn-primary" %>
    </div>

    <% end %>

  </div>
</div>